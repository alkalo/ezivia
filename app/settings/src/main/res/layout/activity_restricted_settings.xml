<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".RestrictedSettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/TextAppearance.Ezivia.Display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_title"
            android:textColor="?attr/colorOnBackground" />

        <TextView
            style="@style/TextAppearance.Ezivia.BodyLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/settings_description"
            android:textColor="?attr/colorOnBackground" />

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.Ezivia.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/ezivia_component_padding_horizontal"
                android:paddingVertical="@dimen/ezivia_component_padding_vertical">

                <TextView
                    style="@style/TextAppearance.Ezivia.BodyLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_caregiver_section"
                    android:textColor="?attr/colorOnBackground" />

                <LinearLayout
                    android:id="@+id/caregiverContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    tools:targetApi="o">

                    <TextView
                        style="@style/TextAppearance.Ezivia.BodyLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_caregiver_empty"
                        android:textColor="?attr/colorOnBackground" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.Ezivia.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/ezivia_component_padding_horizontal"
                android:paddingVertical="@dimen/ezivia_component_padding_vertical">

                <TextView
                    style="@style/TextAppearance.Ezivia.Display"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_accessibility_section"
                    android:textColor="?attr/colorOnBackground" />

                <TextView
                    style="@style/TextAppearance.Ezivia.BodyLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/settings_option_font_size"
                    android:textColor="?attr/colorOnBackground" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/fontSizeSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:valueFrom="18"
                    android:valueTo="34"
                    android:stepSize="2"
                    android:contentDescription="@string/settings_option_font_size"
                    app:thumbRadius="12dp"
                    app:trackHeight="12dp"
                    app:haloRadius="16dp"
                    app:tickVisible="false" />

                <TextView
                    android:id="@+id/fontSizeValue"
                    style="@style/TextAppearance.Ezivia.BodyLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="?attr/colorOnBackground" />

                <TextView
                    style="@style/TextAppearance.Ezivia.BodyLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/settings_option_tone_volume"
                    android:textColor="?attr/colorOnBackground" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/toneVolumeSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:valueFrom="0"
                    android:valueTo="100"
                    android:stepSize="5"
                    android:contentDescription="@string/settings_option_tone_volume"
                    app:thumbRadius="12dp"
                    app:trackHeight="12dp"
                    app:haloRadius="16dp"
                    app:tickVisible="false" />

                <TextView
                    android:id="@+id/toneVolumeValue"
                    style="@style/TextAppearance.Ezivia.BodyLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="?attr/colorOnBackground" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.Ezivia.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/ezivia_component_padding_horizontal"
                android:paddingVertical="@dimen/ezivia_component_padding_vertical">

                <TextView
                    style="@style/TextAppearance.Ezivia.Display"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_safety_section"
                    android:textColor="?attr/colorOnBackground" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/emergencyContactsSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:minHeight="@dimen/ezivia_min_touch_target"
                    android:paddingVertical="8dp"
                    android:text="@string/settings_option_emergency_contacts"
                    android:textColor="?attr/colorOnBackground"
                    android:textAppearance="@style/TextAppearance.Ezivia.BodyLarge" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/largeLockScreenSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:minHeight="@dimen/ezivia_min_touch_target"
                    android:paddingVertical="8dp"
                    android:text="@string/settings_option_large_lock_screen"
                    android:textColor="?attr/colorOnBackground"
                    android:textAppearance="@style/TextAppearance.Ezivia.BodyLarge" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/exitModeButton"
            style="@style/Widget.Ezivia.PrimaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/settings_exit_mode"
            android:textAllCaps="false" />

    </LinearLayout>
</ScrollView>
