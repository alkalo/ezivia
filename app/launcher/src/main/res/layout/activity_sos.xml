<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".SosActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/sosToolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/ezivia_surface"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:navigationIconTint="@color/ezivia_primary"
        app:titleCentered="true"
        app:titleTextColor="@color/ezivia_on_surface" />

    <LinearLayout
        android:id="@+id/sosContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="24dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/sosToolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/sosTitle"
            style="@style/TextAppearance.Ezivia.Display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/sos_title" />

        <TextView
            android:id="@+id/sosDescription"
            style="@style/TextAppearance.Ezivia.BodyLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="@string/sos_description" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sosCallButton"
            style="@style/Widget.Ezivia.HomeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/sos_call_button"
            android:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sosMessageButton"
            style="@style/Widget.Ezivia.HomeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/sos_message_button"
            android:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sosCloseButton"
            style="@style/Widget.Ezivia.HomeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/sos_close"
            android:textAllCaps="false" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
