<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".RemindersOverviewActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/remindersToolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/ezivia_surface"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:navigationIconTint="@color/ezivia_primary"
        app:titleCentered="true"
        app:titleTextColor="@color/ezivia_on_surface" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/remindersList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:nestedScrollingEnabled="true"
        android:paddingBottom="80dp"
        app:layout_constraintTop_toBottomOf="@id/remindersToolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_reminder" />

    <TextView
        android:id="@+id/remindersEmptyView"
        style="@style/TextAppearance.Ezivia.BodyLarge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:gravity="center"
        android:text="@string/reminders_empty"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/remindersList"
        app:layout_constraintBottom_toBottomOf="@id/remindersList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/addReminderFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="@string/reminders_add"
        app:icon="@drawable/ic_action_reminders"
        app:iconTint="@color/ezivia_on_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="@color/ezivia_primary"
        app:backgroundTint="@color/ezivia_primary"
        android:textColor="@color/ezivia_on_primary" />

</androidx.constraintlayout.widget.ConstraintLayout>
