<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".HomeActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/homeScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="24dp"
        android:paddingTop="24dp"
        android:paddingBottom="112dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        tools:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/homeTitle"
                style="@style/TextAppearance.Ezivia.Display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/home_title"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/homeSubtitle"
                style="@style/TextAppearance.Ezivia.BodyLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/home_subtitle"
                android:textAlignment="center" />

            <LinearLayout
                android:id="@+id/highlightActionsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/primaryCallButton"
                    style="@style/Widget.Ezivia.PrimaryButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home_primary_call"
                    android:textAppearance="@style/TextAppearance.Ezivia.Button"
                    android:textAllCaps="false"
                    app:backgroundTint="@color/ezivia_secondary"
                    app:cornerRadius="20dp"
                    app:icon="@drawable/ic_action_call"
                    app:iconPadding="12dp"
                    app:iconTint="@color/ezivia_on_secondary"
                    app:rippleColor="@color/ezivia_highlight" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/primaryVideoButton"
                    style="@style/Widget.Ezivia.PrimaryButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/home_primary_video"
                    android:textAppearance="@style/TextAppearance.Ezivia.Button"
                    android:textAllCaps="false"
                    app:backgroundTint="@color/ezivia_primary"
                    app:cornerRadius="20dp"
                    app:icon="@drawable/ic_action_video_call"
                    app:iconPadding="12dp"
                    app:iconTint="@color/ezivia_on_primary"
                    app:rippleColor="@color/ezivia_highlight" />
            </LinearLayout>

            <TextView
                android:id="@+id/quickActionsTitle"
                style="@style/TextAppearance.Ezivia.BodyLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="@string/home_quick_actions_title" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/quickActionsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:clipToPadding="false"
                android:layoutAnimation="@anim/layout_fade_scale_in"
                android:nestedScrollingEnabled="false"
                tools:itemCount="4"
                tools:listitem="@layout/item_home_quick_action" />

            <TextView
                android:id="@+id/favoritesTitle"
                style="@style/TextAppearance.Ezivia.BodyLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="@string/home_favorites_title" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/favoriteContactsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:clipToPadding="false"
                android:layoutAnimation="@anim/layout_fade_scale_in"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="always"
                android:paddingBottom="12dp"
                tools:itemCount="6"
                tools:listitem="@layout/item_favorite_contact" />

            <TextView
                android:id="@+id/emptyContactsView"
                style="@style/TextAppearance.Ezivia.BodyLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="@string/home_contacts_empty"
                android:visibility="gone" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/sosFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/home_sos_label"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.Ezivia.BodyLarge"
        app:backgroundTint="@color/ezivia_alert"
        app:icon="@drawable/ic_action_sos"
        app:iconPadding="12dp"
        app:iconTint="@color/ezivia_on_alert"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="@color/ezivia_highlight" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/ezivia_surface"
        android:elevation="8dp"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        app:itemIconSize="32dp"
        app:itemIconTint="@color/selector_bottom_nav"
        app:itemTextAppearanceActive="@style/TextAppearance.Ezivia.Button"
        app:itemTextAppearanceInactive="@style/TextAppearance.Ezivia.Button"
        app:itemTextColor="@color/selector_bottom_nav"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/home_navigation" />

</androidx.constraintlayout.widget.ConstraintLayout>
