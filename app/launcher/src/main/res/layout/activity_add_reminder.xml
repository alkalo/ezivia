<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ezivia_surface"
    tools:context=".AddReminderActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/addReminderToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ezivia_surface"
        android:elevation="4dp"
        app:navigationIconTint="@color/ezivia_primary"
        app:titleCentered="true"
        app:titleTextColor="@color/ezivia_on_surface" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginTop="8dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp"
            android:gravity="center_horizontal"
            android:clipToPadding="false">

            <TextView
                android:id="@+id/stepIndicator"
                style="@style/TextAppearance.Ezivia.BodyMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ezivia_on_surface_variant"
                tools:text="Paso 1 de 2" />

            <TextView
                android:id="@+id/stepTitle"
                style="@style/TextAppearance.Ezivia.Display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textColor="@color/ezivia_on_surface"
                tools:text="Elige qué necesitas" />

            <TextView
                android:id="@+id/stepDescription"
                style="@style/TextAppearance.Ezivia.BodyLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:textColor="@color/ezivia_on_surface_variant"
                android:textAlignment="center"
                tools:text="Selecciona si es medicación o cita y sigue con la fecha y hora." />

            <LinearLayout
                android:id="@+id/typeStepGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/typeMedicationCard"
                    style="@style/Widget.Ezivia.Card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/typeMedicationIcon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/ic_action_reminders"
                            android:contentDescription="@string/reminders_type_medication"
                            android:tint="@color/ezivia_primary" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/typeMedicationTitle"
                                style="@style/TextAppearance.Ezivia.BodyLarge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/reminders_type_medication"
                                android:textColor="@color/ezivia_on_surface" />

                            <TextView
                                android:id="@+id/typeMedicationDescription"
                                style="@style/TextAppearance.Ezivia.BodyMedium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/reminders_type_medication_description"
                                android:textColor="@color/ezivia_on_surface_variant" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/typeAppointmentCard"
                    style="@style/Widget.Ezivia.Card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/typeAppointmentIcon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/ic_action_contacts"
                            android:contentDescription="@string/reminders_type_appointment"
                            android:tint="@color/ezivia_primary" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/typeAppointmentTitle"
                                style="@style/TextAppearance.Ezivia.BodyLarge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/reminders_type_appointment"
                                android:textColor="@color/ezivia_on_surface" />

                            <TextView
                                android:id="@+id/typeAppointmentDescription"
                                style="@style/TextAppearance.Ezivia.BodyMedium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/reminders_type_appointment_description"
                                android:textColor="@color/ezivia_on_surface_variant" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/detailsStepGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/selectedTypeLabel"
                    style="@style/TextAppearance.Ezivia.BodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:textColor="@color/ezivia_primary"
                    tools:text="Recordatorio de medicación" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/reminderTitleInput"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/reminders_dialog_name_hint"
                    app:boxBackgroundColor="@color/ezivia_surface"
                    app:hintTextColor="@color/ezivia_on_surface_variant">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapSentences"
                        android:textColor="@color/ezivia_on_surface"
                        android:textSize="20sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/reminders_dialog_date_label"
                    android:textColor="@color/ezivia_on_surface"
                    android:textSize="20sp" />

                <DatePicker
                    android:id="@+id/reminderDatePicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:calendarViewShown="true"
                    android:spinnersShown="false"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/reminders_dialog_time_label"
                    android:textColor="@color/ezivia_on_surface"
                    android:textSize="20sp" />

                <TimePicker
                    android:id="@+id/reminderTimePicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:timePickerMode="clock" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/toggleNotesButton"
                    style="@style/Widget.Ezivia.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/reminders_notes_optional_toggle"
                    android:textColor="@color/ezivia_primary" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/reminderNotesInput"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="@string/reminders_dialog_notes_hint"
                    android:visibility="gone"
                    app:boxBackgroundColor="@color/ezivia_surface"
                    app:hintTextColor="@color/ezivia_on_surface_variant">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapSentences|textMultiLine"
                        android:minLines="2"
                        android:textColor="@color/ezivia_on_surface"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/primaryActionButton"
                    style="@style/Widget.Ezivia.PrimaryButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/reminders_step_continue"
                    android:textColor="@color/ezivia_on_primary"
                    app:backgroundTint="@color/ezivia_primary" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/secondaryActionButton"
                    style="@style/Widget.Ezivia.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/reminders_step_back"
                    android:textColor="@color/ezivia_primary"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
