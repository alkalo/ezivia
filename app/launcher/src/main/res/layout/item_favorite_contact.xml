<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.Ezivia.Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="0dp"
    android:layout_marginVertical="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/contactAvatar"
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:background="@drawable/bg_contact_avatar">

                <TextView
                    android:id="@+id/contactInitial"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/ezivia_on_surface"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    tools:text="M" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/contactName"
                    style="@style/TextAppearance.Ezivia.Display"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ezivia_on_surface"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="María Pérez" />

                <TextView
                    android:id="@+id/contactNumber"
                    style="@style/TextAppearance.Ezivia.BodyLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/ezivia_on_surface_variant"
                    tools:text="+34 600 000 000" />
            </LinearLayout>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <!-- Botonera flexible para alinear las acciones en una o dos filas sin cortar los textos -->
            <androidx.constraintlayout.helper.widget.Flow
                android:id="@+id/contactActionsFlow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:flow_horizontalGap="12dp"
                app:flow_horizontalStyle="packed"
                app:flow_maxElementsWrap="2"
                app:flow_verticalAlign="center"
                app:flow_verticalGap="12dp"
                app:flow_wrapMode="aligned"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:constraint_referenced_ids="callButton,messageButton,videoButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/callButton"
                style="@style/Widget.Ezivia.PrimaryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="@string/action_call"
                android:textAllCaps="false"
                app:backgroundTint="@color/ezivia_secondary"
                app:icon="@drawable/ic_action_call"
                app:iconPadding="8dp"
                app:iconTint="@color/ezivia_on_secondary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/messageButton"
                style="@style/Widget.Ezivia.PrimaryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="@string/action_message"
                android:textAllCaps="false"
                app:backgroundTint="@color/ezivia_highlight"
                app:icon="@drawable/ic_action_message"
                app:iconPadding="8dp"
                app:iconTint="@color/ezivia_on_surface" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/videoButton"
                style="@style/Widget.Ezivia.PrimaryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="@string/action_video_call"
                android:textAllCaps="false"
                app:backgroundTint="@color/ezivia_primary"
                app:icon="@drawable/ic_action_video_call"
                app:iconPadding="8dp"
                app:iconTint="@color/ezivia_on_primary" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
